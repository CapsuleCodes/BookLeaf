<h1>All Reviews</h1> 
<button onclick="goBack()">Go Back</button>
<% @reviews.each do |review| %>
    <h4><a href="/reviews/<%= review.id %>"><%=review.title %></a></h4>
    <br>
    <img src="<%= review.image_url %>" alt="<%= review.title %>" height="200" width="200">

 <br><br>
    <p><%= review.description %></p>
    <p>By: <%= review.user.name %></p>
    
<br>
     <style>
  h1 {color:salmon;}
  h4 {color:pink;}
  p {color:salmon;}
<strong>Created At: <%= review.created_at %></strong>
</style> 

<%#this is for our button on top%>

<script>
function goBack() {
  window.history.back();
}
</script>
<%#this is for our button on top%>
    <% end %>
